            <RadioButton GroupName="Padez" Content="Родительный" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />
            <RadioButton GroupName="Padez" Content="Дательный" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"   />
            <RadioButton GroupName="Padez" Content="Винительный" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />
            <RadioButton GroupName="Padez" Content="Творительный" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />
            <RadioButton GroupName="Padez" Content="Предложный" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />


            <TextBlock Text="Род" FontFamily="Fira Code Light"  FontSize="18"   TextAlignment="Center" Margin="0,20,0,4"  Padding="10" Background="#17976D"  />

            <RadioButton GroupName="Rod" Content="Мужской" Margin="20,20,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />
            <RadioButton GroupName="Rod" Content="Женский" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />
            <RadioButton GroupName="Rod" Content="Средний" Margin="20,5,0,4" FontFamily="Fira Code Light" FontSize="16" BorderThickness="1" BorderBrush="Black"  />

        </StackPanel>



        <TextBlock  Text="Введите число" Grid.Column="1"   FontFamily="Fira Code Light"  FontSize="18" TextAlignment="Center" Padding="10" Margin="100,0,100,136"  Background="#17976D" />


        <Button Grid.Column="1" FontFamily="Fira Code Light" Background="#17976D" FontSize="20" Margin="174,103,166,32" BorderBrush="#17976D" BorderThickness="2" Click="Button_Click_1"  >

            Вперед!
        </Button>


        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="41" Margin="10,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="597" Background="#F2F1F2" BorderBrush="#17976D" BorderThickness="2" FontSize="24" FontWeight="Bold" TextAlignment="Center"   />


        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Height="264" Margin="10,167,10,10" TextWrapping="Wrap" VerticalAlignment="Center" Width="603" Grid.RowSpan="2" Background="#F2F1F2" Foreground="Black" TextAlignment="Center" FontSize="20" FontWeight="Bold" Padding="50"   >
            <Run Text="Ч"/><Run Text="етыре миллиарда четыреста пятьдесят четыре миллиона пятьсот сорок пять тысяч четыреста пятьдесят четыречетыре миллиарда четыреста пятьдесят четыре миллиона пятьсот сорок пять тысяч четыреста пятьдесят четыре"/>
